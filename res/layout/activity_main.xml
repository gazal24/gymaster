<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_weight="20">

		<com.appazal.gymaster.MyTextView
		    android:id="@+id/skip_count_btn"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:onClick="skipButtonClick"
	        android:text="@string/skip_text"
	        android:background="#B3BC69"
	        android:layout_weight="3" />

		<com.appazal.gymaster.MyTextView
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:onClick="getNextGroupButtonClick"
	        android:text="@string/get_today"
	        android:background="#A2AB58"
	        android:layout_weight="1"/>

	</LinearLayout>

	<com.appazal.gymaster.MyTextView
	    android:id="@+id/group_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="25"
        android:background="#E44424"
        android:text="----------" />
    
	<TextView
	    android:id="@+id/group_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:onClick="exit_application"
        android:background="#E44424"
        android:textColor="#FFFFFF"
        android:gravity="right"
        android:paddingRight="10dp"
        android:textSize="15dp"
        android:textStyle="italic"
        android:text="" />

	<com.appazal.gymaster.MyTextView
	    android:id="@+id/muscle_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="30"
        android:background="#67BCDB"
        android:text="----------" />
	
	<com.appazal.gymaster.MyTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="20"
        android:onClick="updateTodayButtonClick"
        android:background="#A2AB58"
        android:text="@string/update_today" />
	
</LinearLayout>
